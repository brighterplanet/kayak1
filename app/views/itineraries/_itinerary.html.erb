<dl class="itinerary">
  <dt>Cost</dt>
  <dd class="cost currency"><%=number_to_currency (Offset.new(itinerary.emission).price + Float(itinerary.price)) %></dd>
  <dt>Price</dt>
  <dd class="price currency"><%= link_to_itinerary_price itinerary %></dd>
  <dt>Emission</dt>
  <dd class="emission"><strong><%=number_with_delimiter itinerary.emission.round %> kg</strong> CO2e</dd>
  <dt>Airline</dt>
  <dd class="airline"><%= airline_image_tag itinerary.airline_code %> <%= itinerary.airline_name %></dd>
  <dt>Stops</dt>
  <dd class="stops"><%= intermediation itinerary %></dd>
</dl>
<%= render :partial => 'legs/ol', :locals => { :legs => itinerary.legs } %>
